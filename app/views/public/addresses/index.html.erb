<h4 class="ml-5">配送先登録/一覧</h4>
<div class="container">
  <div class="row">
    <div class="col-12">
      <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
        <table class="table table-borderless">
          <thead></thead>
          <tbody>
            <tr>
              <th><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></th>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <th><%= f.label :address, "住所" %></th>
              <td><%= f.text_field :address, size: 80 %></td>
            </tr>
            <tr>
              <th><%= f.label :name, "宛名" %></th>
              <td><%= f.text_field :name %>
                  <%= f.submit "新規登録", class: "btn btn-success px-5 mx-5" %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <% @addresses.each do |address| %>
          <tbody>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success px-2" %>
                <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger px-2" %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
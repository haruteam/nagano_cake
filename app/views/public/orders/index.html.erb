<h5 class="ml-5 mb-5">注文履歴一覧</h5>
<div class="container">
  <div class="row">
    <div class="col-12">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <% @order.each do |f| %>
          <tbody>
            <tr>
              <td>
                <%= f.created_at.strftime('%Y/%m/%d') %>
              </td>
              <td>
                〒<%= f.postal_code %><br>
                <%= f.address %><br>
                <%= f.name %><br>
              </td>
              <td>
                <% f.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %><br>
                <% end %>
              </td>
              <td><%= (f.total_payment - 800).to_s(:delimited) %></td>
              <td><%= f.status_i18n %></td>
              <td><%= link_to "表示する", order_path(f.id), class: "btn btn-primary px-2" %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
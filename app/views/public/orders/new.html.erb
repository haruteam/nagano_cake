<h5>注文情報入力</h4>
<div class="container">
  <div class="row">
    <div class="col-12">
      <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
        <table>
          <thead>
            <tr>
              <th>支払方法</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th></th>
              <td><%= f.radio_button :payment_method, Order.payment_methods.key(0), id: "order_クレジットカード" %>
                  <%= f.label Order.payment_methods_i18n[:credit_card] %>
              </td>
            </tr>
            <tr>
              <th></th>
              <td>
                  <%= f.radio_button :payment_method, Order.payment_methods.key(1), id: "order_銀行振込" %>
                  <%= f.label Order.payment_methods_i18n[:transfer] %>
              </td>
            </tr>
          </tbody>
        </table>

        <table>
          <thead>
            <tr>
              <th>お届け先</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th></th>
              <td>
                <%= f.radio_button :select_address, 0, id: "order_ご自身の住所" %>
                <%= f.label "ご自身の住所" %><br>
                <%= current_customer.postal_code %>
                <%= current_customer.address %><br>
                <%= current_customer.full_name %><br>
              </td>
            </tr>
            <tr>
              <th></th>
              <td>
                <%= f.radio_button :select_address, 1, id: "order_登録済住所から選択" %>
                <%= f.label "登録済住所から選択" %><br>
                <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %><br>
              </td>
            </tr>
            <tr>
              <th></th>
              <td>
                <%= f.radio_button :select_address, 2, id: "order_新しいお届け先" %>
                <%= f.label "新しいお届け先" %><br>

                <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
                <%= f.text_field :postal_code %><br>

                <%= f.label :address, "住所" %>
                <%= f.text_field :address %><br>

                <%= f.label :name, "宛名" %>
                <%= f.text_field :name %><br>

                <%= f.submit "確認画面へ進む", class: "btn btn-primary text-center mt-4" %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>


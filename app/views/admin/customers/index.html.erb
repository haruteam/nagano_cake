<div class="container">
  <h4>会員一覧</h4>
  <div class="row">
    <div class="col-10 mx-auto mt-4">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th scope="col">会員ID</th>
              <th scope="col">氏名</th>
              <th scope="col">メールアドレス</th>
              <th scope="col">ステータス</th>
            </tr>
          </thead>
         <% @customers.each do |customer| %>
          <tbody>
            <tr>
              <th scope="row"><%= customer.id %></td>
              <td><u><%= link_to "#{customer.last_name}#{customer.first_name}", admin_customer_path(customer.id), class: "text-dark" %></u></td>
              <td><%= customer.email %></td>
              <% if customer.is_deleted == false %>
                <td class="text-success">有効</td>
              <% else %>
                <td class="text-secondary">退会</td>
              <% end %>
            </tr>
          </tbody>
         <% end %>
        </table>
    </div>
  </div>
</div>



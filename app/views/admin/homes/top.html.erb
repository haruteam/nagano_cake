<h4 class="pl-5 ml-5">注文履歴一覧</h4>
<div class="container">
  <div class="row">
    <div class="col-12">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
          <tbody>
            <tr>
              <td><%= order.created_at %></td>
              <td><%= order.customer.full_name %></td>
              <td><%= order.order_details.count %></td>
              <td><%= order.status_i18n %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>

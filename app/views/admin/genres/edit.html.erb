<div class="container">
  <div class="row">
    <div class="col-12">
      <h4>ジャンル編集</h4>
      <%= form_with model: @genre, url: admin_genre_path(params[:id]), method: :patch, class: "mt-5" do |f| %>
        <%= f.label :name, "ジャンル名", class: "mr-4" %>
        <%= f.text_field :name, class: "mr-5" %>
        <%= f.submit "変更を保存", class: "btn btn-success px-4" %>
      <% end %>
    </div>
  </div>
</div>
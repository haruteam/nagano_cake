<h4>ジャンル一覧・追加</h4>
<%= form_with model: Genre.new, url: admin_genres_path do |f| %>
  <%=f.label :name, "ジャンル名"%>
  <%=f.text_field :name %>
  <%=f.submit "新規登録" %>
<% end %>

<% @genres.each do |genre| %>
  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="mb-5">ジャンル一覧・追加</h5>
      <%= form_with model: Genre.new, url: admin_genres_path do |f| %>
        <%= f.label :name, "ジャンル名", class: "mr-5" %>
        <%= f.text_field :name, class: "mr-5" %>
        <%= f.submit "新規登録", class: "btn btn-success px-4" %>
      <% end %>
    </div>
  </div>
  <div class="row mt-5">
      <table class="table col-5">
          <thead>
            <tr>
              <th scope="col" >ジャンル</th>
              <th scope="col" ></th>
            </tr>
          </thead>
        <% @genres.each do |genre| %>
          <tbody>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
  </div>
</div>

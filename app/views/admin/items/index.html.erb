<h4>商品一覧</h4>
<div class="container">
  <div class="row">
    <div class="col-10">
      <table>
        <thead>
          <tr>
            <th class="col-1">商品ID</th>
            <th class="col-2">商品名</th>
            <th class="col-2">税抜価格</th>
            <th class="col-2">ジャンル</th>
            <th class="col-2">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td class="col-1"><%= item.id %></td>
              <td class="col-2"><%=link_to admin_item_path(item.id) do %><%= item.name %><% end %></td>
              <td class="col-2"><%= item.price.to_s(:delimited) %></td>
              <td class="col-2"><%= item.genre.name %></td>
              <% if item.is_active == "販売中" %>
                <td class="col-2 text-success"><%= item.is_active %></td>
              <% else %>
                <td class="col-2 text-secondary fw-bold"><%= item.is_active %></td>
              <% end %>
            </tr>
            <!--delete-->
            <tr><th><%= link_to "delete", admin_item_path(item.id), method: :delete %></th></tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<h4>商品詳細</h4>
<div class="container">
  <div class="row">
    <% @item.each do |item| %>
      <div class="ml-auto mr-5">
        <%= image_tag item.image, size: "300x200" %>
      </div>
      <table class="mr-auto">
        <tr>
          <th>商品名</th>
          <td><%= item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格<br>(税抜価格)</th>
          <td><%= item.price.to_s(:delimited) %> (<%= item.with_tax_price.to_s(:delimited) %>) 円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <% if item.is_active%>
            <td class="text-success">販売中</td>
          <% else %>
            <td class="text-secondary">販売停止中</td>
          <% end %>
          
        </tr>
      </table>
    <% end %>
  </div>
  <div class="row">
    <div class="col text-center mt-5">
      <%= link_to "編集する",edit_admin_item_path(params[:id]), class: "py-2 px-5 btn btn-success" %>
    </div>
  </div>
</div>